.blog
	&__wrapper
		padding-top 65px
		padding-bottom 100px
	&__posts
		display flex
		justify-content space-between
		@media(max-width 700px)
			flex-direction column
			align-items center
	&__post
		max-width 380px
	&__preview
		position relative
	&__date
		position absolute
		left -10px
		bottom 10px
		text-align center
		color white
		background-color $sea-green
		size 60px 70px
	&__day
		margin-top 10px
		font-family montserrat
		font-size 30px
		font-weight bold
	&__month
		font-style italic
	&__sign
		padding-y 20px
		display block
		text-decoration none
		color inherit
		&:hover ^[0]__title
			color lighten($dark-grey, 50%)
	&__title
		margin-bottom 15px
		display block
		font-family montserrat
		text-transform uppercase
		color $dark-grey
	&__desc
		display block
		line-height 1.5
	&__image
		width 100%
		height auto
	&__indicators
		padding-y 12px
		border-top 1px solid #e5e5e5
	&__views, &__comments
		margin-right 15px
		display inline-block
	&__icon
		margin-right 4px
		vertical-align middle
		fill $sea-green
		&_view
			size 20px
		&_comment
			size 16px
	&__number
		font-style italic