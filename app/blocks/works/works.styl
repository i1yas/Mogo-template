.works
	&__wrapper
		padding-top 67px
		@media(max-width 540px)
			padding-top 30px
	&__items
		margin-x auto
		display flex
		max-width 1920px
		@media(max-width 980px)
			flex-wrap wrap
	&__group
		display flex
		flex-direction column
		&_swap
			order 1
		@media(max-width 980px)
			flex-direction row
			&_swap
				flex-direction column
				width 50%
	&__item
		background $red
		@media(max-width 980px)
			&_big
				width 50%
	&__icon
		fill white
		size 30px
	&__preview-content
		display block
		text-decoration none
		color white
	&__preview-sign
		margin-top 20px
		display block
	&__preview-title
		margin-bottom 15px
		display block
		font-family montserrat
		font-size 14px
		text-transform uppercase
	&__preview-desc
		padding-x 10%
		display block
		font-style italic
		line-height 1.5
		@media(max-width 980px)
			line-height 1.2
		
			