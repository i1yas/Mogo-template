.quotes
	background #f8f8f8
	&__wrapper
		padding-y 70px
		@media(max-width 600px)
			padding-y 30px
	&__slider
		display flex
		align-items center
		@media(max-width 600px)
			justify-content space-between
			flex-wrap wrap
	&__icon-box
		margin-x 50px
		padding 42px 40px
		width 144px
		border 3px solid $sea-green
		align-self flex-start
		@media(max-width 980px)
			margin-x 25px
			padding 22px 20px
			width 72px
		@media(max-width 720px)
			display none
	&__items
		overflow hidden
		align-self flex-start
		@media(max-width 600px)
			flex-basis 100%
			flex-shrink 0
	&__quote
		margin-right 50px
		user-select none
		@media(max-width 600px)
			margin-right 0
	&__speech
		font-size 24px
		font-style italic
		line-height 1.5
		&:before
			display inline
			content '\“'
		&:after
			display inline
			content '\”'

	&__author
		margin-top 20px
		font-family kaushan
		font-size 24px
		color $dark-grey
		&:before
			margin-right 10px
			margin-bottom 5px
			display inline-block
			content ''
			background $red
			size 60px 3px
			@media(max-width 980px)
				size 20px 3px
	&__icon
		size 61px 63px
		fill $sea-green
		@media(max-width 980px)
			size 30px 32px
	&__nav-btn
		padding-y 10px
		background none
		border none
		border-radius 3px
		&:focus
			background-color rgba(black, .03)
		@media(max-width 600px)
			margin-bottom 10px
			padding-bottom 20px
			&_left
				order -2
			&_right
				order -1
	&__arrow
		margin-x 23px
		cursor pointer
		fill #ccc
		size 22px
		&:hover
			fill $sea-green
		@media(max-width 980px)
			&_left
				margin-left 0
			&_right
				margin-right 0
			