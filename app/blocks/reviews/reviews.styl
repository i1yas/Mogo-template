.reviews
	background #f8f8f8
	&__wrapper
		padding-y 70px
		@media(max-width 600px)
			padding-y 30px
	&__slider
		display flex
		align-items center
		@media(max-width 600px)
			justify-content space-between
			flex-wrap wrap
	&__avatars
		margin-right 30px
		margin-left 10px
		overflow hidden
		border-radius 50%
		flex-basis 210px
		flex-shrink 0
	&__avatars-row
		display flex
	&__items
		overflow hidden
		align-self flex-start
		@media(max-width 600px)
			flex-basis 100%
			flex-shrink 0
	&__icon
		size 61px 63px
		fill $sea-green
		@media(max-width 980px)
			size 30px 32px
	&__nav-btn
		padding-y 10px
		background none
		border none
		border-radius 3px
		&:focus
			background-color rgba(black, .03)
		@media(max-width 600px)
			margin-bottom 10px
			padding-bottom 20px
			&_left
				order -2
			&_right
				order -1
	&__arrow
		margin-x 23px
		cursor pointer
		fill #ccc
		size 22px
		&:hover
			fill $sea-green
		@media(max-width 980px)
			&_left
				margin-left 0
			&_right
				margin-right 0
