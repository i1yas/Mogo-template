.header
	height 1000px
	color white
	background-color $red
	background-image url(../images/header/background.jpg)
	&__wrapper
		padding-y 28px
	&__top
		margin-bottom 28px
		display flex
		justify-content space-between
		font-family montserrat
	&__logo
		font-weight bold
		font-size 30px
	&__navigation
		display inline-block
	&__nav-item
		padding 11px 27px
		display inline-block
		text-decoration none
		color white
		transition color .1s
		text-transform uppercase
		&:hover
			color $yellow
		&_selected
			margin-x 27px
			padding 11px 0
			cursor default
			color $yellow
			border-bottom 3px solid $yellow
	&__icons
		display inline-block
	&__icon-item
		display inline-block
		padding 11px 27px
		&_lens
			padding-right 0
	&__icon
		transition fill .1s
		size 16px
		fill white
		&:hover
			fill $yellow