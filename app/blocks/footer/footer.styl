.footer
	background-color #f8f8f8
	&__wrapper
		padding-top 70px
	&__content
		display flex
		flex-wrap wrap
		justify-content space-between
	&__left-side
		flex-basis 40%
		@media(max-width 980px)
			margin-bottom 50px
			display flex
			flex-wrap wrap
			justify-content space-between
			flex-basis 100%
	&__about
		@media(max-width 980px)
			flex-basis 100%
	&__logo-title
		font-family montserrat
		font-size 46px
		font-weight bold
		color #ccc
	&__desc
		padding-y 50px
		line-height 1.5
		@media(max-width 980px)
			padding-y 30px
	&__social
		@media(max-width 980px)
			flex-basis 48%
		@media(max-width 800px)
			flex-basis 30%
		@media(max-width 600px)
			flex-basis 100%
	&__followers
		margin-bottom 18px
		font-family montserrat
		color $dark-grey
	&__numbers
		font-size 18px
		font-weight bold
	&__icons
		margin-bottom 20px
		padding-y 18px
		border-top 1px solid #e5e5e5
	&__icon-sign
		margin-right 20px
		font-style italic
		@media(max-width 800px)
			display none
		@media(max-width 600px)
			display inline
		@media(max-width 400px)
			display none
	&__social-btn
		padding-x 6px
		background none
		border none
		&:hover ^[0]__icon
			fill darken($sea-green, 30%)
		@media(max-width 800px)
			padding 10px 6px
	&__icon
		position relative
		top 2px
		transition fill .1s
		fill $sea-green
		size 16px
	&__search
		width 380px
		@media(max-width 980px)
			flex-basis 48%
		@media(max-width 800px)
			flex-basis 66%
		@media(max-width 600px)
			width 100%
			flex-basis 100%
	&__title
		margin-bottom 40px
		font-family montserrat
		font-size 14px
		text-transform uppercase
		color $dark-grey
	&__blog
		flex-basis 32%
		@media(max-width 980px)
			flex-basis 48%
	&__instagram
		flex-basis 22.5%
		@media(max-width 980px)
			flex-basis 48%
	&__bottom
		margin-top 70px
		padding-y 22px
		font-family montserrat
		font-size 14px
		line-height 1.5
		text-align center
		color $dark-grey
		border-top 1px solid #e5e5e5
	&__link
		text-decoration none
		color $red
		&:hover
			color lighten($red, 30%)
		