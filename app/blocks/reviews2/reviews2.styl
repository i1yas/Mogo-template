.reviews2
	background-color #ebebeb
	background-image url(../images/reviews2/background.jpg)
	background-size cover
	background-position 50% 50%
	&__wrapper
		padding-top 64px
		padding-bottom 60px
		@media(max-width 540px)
			padding-top 20px
			padding-bottom 10px
	&__items
		margin-top 40px
		display flex
		flex-wrap wrap
		justify-content space-around
		align-items center
	&__item
		margin-bottom 70px
		flex-basis 50%
		flex-shrink 0
		clearfix()
		@media(max-width 980px)
			flex-basis 40%
		@media(max-width 540px)
			margin-bottom 50px
			text-align center
			flex-basis 100%
	&__photo
		float left
		border-radius 50%
		@media(max-width 540px)
			float none
	&__text
		margin-left 30px
		float left
		width 65%
		@media(max-width 980px)
			margin-left 10px
			clear both
			float none
			width 100%
		@media(max-width 540px)
			margin-left 0
	&__name
		padding-y 12px
		font-family montserrat
		font-size 14px
		text-transform uppercase
		color $dark-grey
	&__position
		margin-bottom 20px
		font-style italic
		&:after
			margin-top 15px
			content ''
			display block
			size 60px 3px
			background-color $red
			@media(max-width 540px)
				margin-x auto
	&__text
		line-height 1.4