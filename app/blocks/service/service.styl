.service
	&__wrapper
		padding-bottom 73px
	&__box
		display flex
		justify-content space-between
	&__pictures
		position relative
		height 380px
		flex-shrink 0
		flex-basis 570px
	&__menu
		flex-basis 600px
	&__picture
		position absolute
		opacity 1
		transition opacity .1s linear
	&__menu-item
		margin-bottom 10px
	&__menu-title
		position relative
		padding 15px
		line-height 30px
		cursor pointer
		border 1px solid #e5e5e5
	&__menu-icon
		margin-right 10px
		vertical-align middle
		fill $sea-green
		size 30px
	&__menu-sign
		display inline-block
		font-family montserrat
		font-size 14px
		text-transform uppercase
		color $dark-grey
	&__arrow-icon
		position absolute
		top 20px
		right 20px
		fill #ccc
		size 22px
		&_up
			transform rotateX(180deg)
	&__menu-desc
		padding 15px
		display none
		overflow-y auto
		max-height 170px
		border-left 1px solid #e5e5e5
		border-right 1px solid #e5e5e5
		border-bottom 1px solid #e5e5e5
		transform translateY(0) scaleY(1)
		transition transform .2s
		&_open
			display block