.facts
	color white
	background-color $sea-green
	&__wrapper
		padding 0 !important // @stylint ignore
	&__row
		display table
		width 100%
		border-collapse collapse
	&__col
		padding 90px 10px
		display table-cell
		width 20%
		font-family montserrat
		text-align center
		vertical-align middle
		border-left 1px solid lighten($sea-green, 30%)
		border-right 1px solid lighten($sea-green, 30%)
		@media(max-width 980px)
			padding-y 60px
		@media(max-width 540px)
			padding-y 30px
	&__number
		font-size 72px
		font-weight bold
		@media(max-width 980px)
			font-size 40px
		@media(max-width 540px)
			font-size 30px
	&__sign
		font-size 14px
		text-transform uppercase
		@media(max-width 540px)
			font-size 12px
	