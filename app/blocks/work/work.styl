.work
	&__wrapper
		padding-y 50px
	&__services
		position relative
		display flex
		justify-content space-around
		flex-wrap wrap
		&:before
			position absolute
			top 50%
			display block
			content ''
			background #e5e5e5
			size 100% 1px
		@media(max-width 800px)
			&:before
				display none
	&__servise
		padding-y 48px
		display flex
		flex-basis 30%
		@media(max-width 800px)
			flex-basis 40%
		@media(max-width 540px)
			flex-basis 100%
	&__icon-block
		padding-right 30px
		height 100%
		@media(max-width 800px)
			padding-right 20px
	&__icon
		size 32px
		fill $sea-green
	&__title
		padding-bottom 20px
		display table-cell
		font-family montserrat
		font-size 14px
		font-weight bold
		text-transform uppercase
		color $dark-grey
	&__desc
		font-size 15px