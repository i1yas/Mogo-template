.slider
	display flex
	flex-direction column
	height 100%
	text-align center
	justify-content space-between
	&__items
		display flex
		overflow-x auto
		// @stylint off
		overflow -moz-scrollbars-none
		-webkit-overflow-scrolling touch
		-ms-overflow-style none
		&::-webkit-scrollbar
			width 0 !important
		// @stylint on
	&__item
		user-select none
		flex-shrink 0
		flex-basis 100%
	&__titles
		&:after
			display inline-block
			content ''
			background-color #fff
			size 60px 3px
			@media(max-width 650px)
				display none
	&__small-title
		margin-bottom 60px
		font-family kaushan
		font-size 72px
		@media(max-width 1240px)
			padding-y 20px
		@media(max-width 980px)
			font-size 50px
		@media(max-width 650px)
			font-size 37px
		@media(max-width 540px)
			margin-bottom 20px
			font-size 20px
	&__big-title
		margin-bottom 45px
		font-family montserrat
		font-size 150px
		font-weight bold
		text-transform uppercase
		span
			white-space nowrap
		@media(max-width 1240px)
			padding-y 20px
		@media(max-width 980px)
			font-size 100px
		@media(max-width 650px)
			font-size 75px
		@media(max-width 540px)
			margin-bottom 0
			font-size 40px
	&__button
		margin-y 50px
		padding-x 30px
		height 40px
		font-family montserrat
		font-size 14px
		text-transform uppercase
		color white
		background none
		border 3px solid white
		transition border .1s, color .3s
		@media(max-width 980px)
			padding-x 20px
			height 30px
		@media(max-width 650px)
			margin-x 20px
		&:hover
			border 3px solid $yellow
		&:active
			color $red
		&:focus
			color $red
			border 3px solid $red
	&__navigation
		display flex
		flex-wrap wrap
		justify-content space-between
	&__nav-item
		font-family montserrat
		text-align left
		text-decoration none
		color rgba(white, .7)
		flex-basis 24%
		flex-shrink 0
		&:hover
			color rgba(white, 1)
		&:focus
			color white
			& ^[0]__number
				margin-top 16px
				font-size 25px
		&_selected
			color rgba(white, 1)
	&__line
		display inline-block
		background-color rgba(white, .5)
		size 100% 3px
	&__progress-line
		width 0
		height 100%
		background-color $red
	&__sign
		font-size 18px
		text-transform uppercase
		@media(max-width 650px)
			font-size 15px
		@media(max-width 390px)
			font-size 12px
	&__number
		margin-top 21px
		margin-right 3px
		display inline-block
		font-size 24px
		font-weight bold
		@media(max-width 540px)
			display none